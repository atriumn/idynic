{
  "name": "idynic-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:local": "./scripts/dev-local.sh",
    "dev:prod": "cp .env.local.prod .env.local 2>/dev/null || echo 'No .env.local.prod backup found' && pnpm dev",
    "dev:mobile": "pnpm --filter mobile start",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:push": "supabase db push",
    "build": "pnpm --filter web build",
    "lint": "pnpm --filter web lint",
    "typecheck": "pnpm --filter web exec tsc --noEmit",
    "prepare": "husky",
    "test": "pnpm -r --parallel test",
    "test:run": "pnpm -r test:run",
    "test:coverage": "pnpm -r test:coverage",
    "test:web": "pnpm --filter web test",
    "test:mobile": "pnpm --filter mobile test",
    "test:shared": "pnpm --filter @idynic/shared test",
    "test:mcp": "pnpm --filter @atriumn/idynic-mcp test",
    "test:extension": "pnpm --filter chrome-extension test",
    "test:ui": "pnpm --filter web test:ui",
    "test:integration": "pnpm --filter web test:integration"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "sharp": "^0.34.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.3.27",
      "@types/react-dom": "18.3.7"
    }
  },
  "packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef"
}
