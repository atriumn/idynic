default_platform(:ios)

platform :ios do
  desc "Sync certificates and profiles"
  lane :certificates do
    if is_ci
      # Create a temporary keychain for CI
      create_keychain(
        name: "ci_keychain",
        password: ENV["MATCH_PASSWORD"],
        default_keychain: true,
        unlock: true,
        timeout: 3600,
        lock_when_sleeps: false
      )

      match(
        type: "appstore",
        readonly: true,
        keychain_name: "ci_keychain",
        keychain_password: ENV["MATCH_PASSWORD"]
      )
    else
      match(type: "appstore", readonly: false)
    end
  end

  desc "Build iOS app"
  lane :build do
    # Ensure we have certs
    certificates

    # Generate native project
    Dir.chdir("..") do
      sh("npx expo prebuild --platform ios --clean")
    end

    # Install pods
    cocoapods(podfile: "./ios/Podfile")

    # Configure code signing
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "./ios/Idynic.xcodeproj",
      team_id: "MVYX66G3WU",
      profile_name: "match AppStore com.atriumn.idynic",
      code_sign_identity: "iPhone Distribution"
    )

    # Build the app
    build_app(
      workspace: "./ios/Idynic.xcworkspace",
      scheme: "Idynic",
      export_method: "app-store",
      output_directory: "./ios/build",
      output_name: "Idynic.ipa",
      clean: true
    )
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    build
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "Build and upload to App Store"
  lane :release do
    build
    upload_to_app_store(
      skip_screenshots: true,
      skip_metadata: true,
      precheck_include_in_app_purchases: false
    )
  end
end
